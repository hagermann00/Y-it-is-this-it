{
  "survey_schedule": {
    "runs_per_day": 3,
    "times": ["06:00", "14:00", "22:00"],
    "timezone": "UTC"
  },
  "data_sources": {
    "youtube": {
      "enabled": true,
      "channels": [
        "AI Explained",
        "Two Minute Papers",
        "Yannic Kilcher",
        "Machine Learning Street Talk"
      ],
      "search_queries": [
        "AI tools",
        "machine learning new",
        "AI agents",
        "LLM applications"
      ]
    },
    "huggingface": {
      "enabled": true,
      "endpoints": [
        "models/trending",
        "datasets/trending",
        "spaces/trending"
      ]
    },
    "github": {
      "enabled": true,
      "topics": [
        "artificial-intelligence",
        "machine-learning",
        "deep-learning",
        "llm",
        "ai-agents"
      ]
    },
    "arxiv": {
      "enabled": true,
      "categories": ["cs.AI", "cs.LG", "cs.CL", "cs.CV"]
    },
    "paperswithcode": {
      "enabled": true,
      "areas": ["natural-language-processing", "computer-vision", "reinforcement-learning"]
    },
    "reddit": {
      "enabled": true,
      "subreddits": ["MachineLearning", "LocalLLaMA", "OpenAI", "artificial"]
    }
  },
  "personalization": {
    "enabled": true,
    "auto_analyze_projects": true,
    "require_user_approval": false,
    "user_override_enabled": true
  },
  "database": {
    "path": "./data/ai_knowledge.db",
    "backup_enabled": true,
    "backup_frequency": "daily"
  }
}
